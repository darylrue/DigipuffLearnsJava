<?xml version="1.0" encoding="UTF-8"?>

<?import DigipuffLearnsJava.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import DigipuffLearnsJava.LimitedTextField?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DigipuffLearnsJava.WorldGenController">
   <center>
      <ScrollPane fx:id="worldPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
        </content>
      </ScrollPane>
   </center>
   <left>
      <VBox prefWidth="230.0" styleClass="wgenbg" BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open" />
                    <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#saveFileAs" text="Save as ..." />
                        <MenuItem mnemonicParsing="false" onAction="#setDirectory" text="Set Default Directory" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <VBox fx:id="leftVBox" spacing="30.0">
               <children>
                  <VBox alignment="TOP_CENTER" spacing="5.0">
                     <children>
                        <Label styleClass="styled-text" text="Number of Horizontal Spaces" />
                        <ComboBox fx:id="numHorizSpacesCB" styleClass="wgen-cb">
                                <value>
                                   <Integer fx:value="9" />
                                </value>
                        </ComboBox>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" spacing="5.0">
                     <children>
                        <Label styleClass="styled-text" text="Number of Vertical Spaces" />
                        <ComboBox fx:id="numVertSpacesCB" styleClass="wgen-cb">
                           <value>
                              <Integer fx:value="8" />
                           </value>
                        </ComboBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label styleClass="styled-text" text="Size of Each Space (px)" />
                        <LimitedTextField fx:id="spaceSizeTF" maxLength="3" onAction="#changeSpaceSize" prefWidth="50.0" />
                     </children>
                  </HBox>
                  <VBox spacing="5.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label alignment="TOP_LEFT" styleClass="styled-text" text="Walls" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <ToggleButton fx:id="wallBtn" mnemonicParsing="false" onAction="#wallBtnClick" styleClass="wgen-button" text="Add / Remove Wall">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="worldToolsTG" />
                                 </toggleGroup>
                              </ToggleButton>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="styled-text" text="Goal" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label styleClass="small-text" text="Location:" />
                              <ToggleButton fx:id="goalBtn" mnemonicParsing="false" onAction="#goalBtnClick" styleClass="wgen-button" text="Add / Remove" toggleGroup="$worldToolsTG" />
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label styleClass="small-text" text="Direction:" />
                              <ComboBox fx:id="dirCB" onAction="#setGoalDir" prefWidth="85.0" styleClass="wgen-cb" />
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
                        <Label styleClass="small-text" text="No. of Flashlights:">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Label>
                        <HBox spacing="20.0">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                           <children>
                              <ComboBox fx:id="numFLSymCB" onAction="#setNumFLSym" prefWidth="65.0" styleClass="wgen-cb" />
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <LimitedTextField fx:id="numFLAmtTF" maxLength="3" onAction="#setNumFLAmt" prefWidth="40.0" text="1" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <Label styleClass="small-text" text="No. of Moves:">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Label>
                        <HBox spacing="20.0">
                           <children>
                              <ComboBox fx:id="numMovesSymCB" onAction="#setNumMovesSym" prefWidth="65.0" styleClass="wgen-cb" />
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <LimitedTextField fx:id="numMovesAmtTF" maxLength="3" onAction="#setNumMovesAmt" prefWidth="40.0" text="1" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="styled-text" text="Flashlights" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <ToggleButton fx:id="addFlashlightBtn" mnemonicParsing="false" onAction="#flashlightBtnClick" styleClass="wgen-button" text="Add Flashlight" toggleGroup="$worldToolsTG" />
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label text="amt" />
                                    <LimitedTextField fx:id="flashlightAddAmt" maxLength="3" prefWidth="40.0" text="1" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" spacing="20.0">
                           <children>
                              <ToggleButton fx:id="remFlashlightBtn" mnemonicParsing="false" styleClass="wgen-button" text="Remove Flashlight" toggleGroup="$worldToolsTG" />
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label text="amt" />
                                    <LimitedTextField fx:id="remFlashlightAmt" maxLength="3" prefWidth="40.0" text="1" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </left>
</BorderPane>
